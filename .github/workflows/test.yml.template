# GitHub Actions Workflow for Testing
# 
# This is a template file. To use it:
# 1. Rename to test.yml (remove .template extension)
# 2. Commit to your repository
# 3. Tests will run automatically on push and PR

name: Tests

on:
  push:
    branches:
      - main
      - develop
  pull_request:
    branches:
      - main
      - develop
  schedule:
    # Run tests daily at midnight UTC
    - cron: '0 0 * * *'
  workflow_dispatch:
    # Allow manual trigger

jobs:
  test:
    name: Run Test Suite
    runs-on: ubuntu-latest
    timeout-minutes: 60
    
    strategy:
      fail-fast: false
      matrix:
        test-suite:
          - visual
          - accessibility
          - performance
          - browser
          - i18n
          - unit
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Install Playwright browsers
        if: matrix.test-suite != 'unit'
        run: npx playwright install --with-deps
      
      - name: Setup environment
        run: |
          cp .env.example .env
          echo "DATABASE_URL=postgresql://test:test@localhost:5432/test" >> .env
          echo "NEXTAUTH_SECRET=test-secret-key-for-ci" >> .env
          echo "NEXTAUTH_URL=http://localhost:3000" >> .env
      
      - name: Setup PostgreSQL
        if: matrix.test-suite == 'unit'
        uses: harmon758/postgresql-action@v1
        with:
          postgresql version: '14'
          postgresql db: 'test'
          postgresql user: 'test'
          postgresql password: 'test'
      
      - name: Run database migrations
        if: matrix.test-suite == 'unit'
        run: npx prisma migrate deploy
      
      - name: Build application
        run: npm run build
      
      - name: Run ${{ matrix.test-suite }} tests
        run: npm run test:${{ matrix.test-suite }}
        env:
          CI: true
      
      - name: Upload test results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: test-results-${{ matrix.test-suite }}
          path: test-results/
          retention-days: 30
      
      - name: Upload Playwright report
        uses: actions/upload-artifact@v3
        if: always() && matrix.test-suite != 'unit'
        with:
          name: playwright-report-${{ matrix.test-suite }}
          path: playwright-report/
          retention-days: 30
      
      - name: Upload screenshots
        uses: actions/upload-artifact@v3
        if: failure() && matrix.test-suite != 'unit'
        with:
          name: screenshots-${{ matrix.test-suite }}
          path: test-results/**/*.png
          retention-days: 7
      
      - name: Upload videos
        uses: actions/upload-artifact@v3
        if: failure() && matrix.test-suite != 'unit'
        with:
          name: videos-${{ matrix.test-suite }}
          path: test-results/**/*.webm
          retention-days: 7
      
      - name: Comment PR with results
        uses: daun/playwright-report-comment@v3
        if: always() && github.event_name == 'pull_request' && matrix.test-suite != 'unit'
        with:
          report-path: playwright-report
          report-url: https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}

  # Aggregate results from all test suites
  test-summary:
    name: Test Summary
    runs-on: ubuntu-latest
    needs: test
    if: always()
    
    steps:
      - name: Check test results
        run: |
          if [ "${{ needs.test.result }}" == "failure" ]; then
            echo "❌ Some tests failed"
            exit 1
          else
            echo "✅ All tests passed"
          fi
      
      - name: Create summary
        run: |
          echo "## Test Results Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Test Suite | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| Visual Regression | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Accessibility | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Performance | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Cross-Browser | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Internationalization | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Unit Tests | ${{ needs.test.result }} |" >> $GITHUB_STEP_SUMMARY

  # Optional: Deploy test report to GitHub Pages
  deploy-report:
    name: Deploy Test Report
    runs-on: ubuntu-latest
    needs: test
    if: always() && github.ref == 'refs/heads/main'
    
    permissions:
      contents: write
      pages: write
      id-token: write
    
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v3
      
      - name: Combine reports
        run: |
          mkdir -p combined-report
          for dir in playwright-report-*; do
            if [ -d "$dir" ]; then
              cp -r "$dir"/* combined-report/
            fi
          done
      
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./combined-report
          destination_dir: test-reports/${{ github.run_number }}

