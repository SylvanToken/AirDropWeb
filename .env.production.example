# Production Environment Variables for Vercel
# Copy these to Vercel Dashboard > Project Settings > Environment Variables

# Database (PostgreSQL - Supabase)
# Connection Pooler (for serverless/edge functions - use this for most queries)
# Add connection pooling parameters for better stability
DATABASE_URL="postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-us-east-1.pooler.supabase.com:5432/postgres?pgbouncer=true&connection_limit=1&pool_timeout=10"

# Direct Connection (for migrations and long-running operations)
# Use port 6543 for direct connection (bypasses pgBouncer)
DIRECT_DATABASE_URL="postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres"

# NextAuth
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Admin Credentials (initial setup)
ADMIN_EMAIL="admin@sylvantoken.org"
ADMIN_PASSWORD="secure-password-change-immediately"

# Application
NODE_ENV="production"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
RESEND_WEBHOOK_SECRET="your_webhook_signing_secret_here"

# Email Security
EMAIL_ENCRYPTION_KEY="generate-with-openssl-rand-base64-32"

# Admin Notification Emails
ADMIN_EMAILS="admin@sylvantoken.org"

# Redis (optional - for email queue)
USE_REDIS=false
# REDIS_URL="redis://your-redis-url"

# Cron Job Security
CRON_SECRET="generate-with-openssl-rand-base64-32"

# Supabase Configuration
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# Public Supabase Keys (for client-side)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
